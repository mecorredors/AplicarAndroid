<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- styles alert dialog -->
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="spinnerDropDownItemStyle">@style/AppTheme.Dialog</item>
        <item name="textColorError">@color/black</item>
    </style>


    <!-- Style the dialog like the normal AppTheme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAccent" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonWhite" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonBorderlessColored" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:height">@dimen/button_height</item>
    </style>


    <style name="lyUsuario">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    </style>

    <style name="editTextUsuario">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="lyDetalleReserva">
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    </style>

    <style name="lyControl">
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    </style>

    <style name="editText">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="titulo">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:background">@color/blue50</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/margin_6dp</item>
        <item name="android:paddingBottom">@dimen/margin_6dp</item>
    </style>


    <!-- teme bicicar -->

    <style name="AppThemeBicicar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBicicar</item>
        <item name="colorPrimaryDark">@color/primaryDarkBicicar</item>
        <item name="colorAccent">@color/accentBicicar</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- styles alert dialog -->
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="spinnerDropDownItemStyle">@style/AppTheme.Dialog</item>
        <item name="textColorError">@color/black</item>
    </style>

    <style name="AppThemeBicicar.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBicicar</item>
        <item name="colorPrimaryDark">@color/primaryDarkBicicar</item>
        <item name="colorAccent">@color/accentBicicar</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- styles alert dialog -->
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="spinnerDropDownItemStyle">@style/AppTheme.Dialog</item>
        <item name="textColorError">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ButtonAccentBicicar" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/accentBicicar</item>
        <item name="colorControlHighlight">@color/primaryBicicar</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonWhiteBicicar" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/accentBicicar</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonBorderlessBicicar" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/primaryBicicar</item>
        <item name="android:textColor">@color/accentBicicar</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:height">@dimen/button_height</item>
    </style>


</resources>
