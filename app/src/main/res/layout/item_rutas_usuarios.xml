<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyItemLogTrayecto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/background"
    android:layout_margin="@dimen/margin_16dp"
    card_view:contentPaddingLeft="@dimen/margin_6dp"
    >



    <LinearLayout android:id="@+id/lyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bike_blue_light_36dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <TextView android:id="@+id/lblNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Nombre"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="@dimen/margin_6dp"
                />

            <TextView android:id="@+id/lblDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Descripcion"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/primaryText"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="@dimen/margin_16dp"
                />

                <TextView android:id="@+id/lblDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:text="15,2 km"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/primaryText"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginTop="@dimen/margin_6dp"
                    />



            <TextView android:id="@+id/lblNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Nivel"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/accentBicicar"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="@dimen/margin_6dp"
                />


            <TextView android:id="@+id/lblNombreUsuarioCreacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Nombre Usuiario"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="@dimen/margin_16dp"
                />
            <TextView android:id="@+id/lblFechaCreacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Nombre Usuiario"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_vertical|right"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
