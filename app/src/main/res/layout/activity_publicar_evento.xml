<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bicicar.activities.PublicarEventoActivity"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/primaryText"
        android:text="Selecciona la distancia que desea tomar para publicar el evento"

        />



    <RadioButton android:id="@+id/rbMiRecorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de mi recorrido (GPS)"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_16dp"
        />
    <TextView android:id="@+id/lblDatosRecorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="454545 km 45 min 78787.44 4545"/>




    <RadioButton android:id="@+id/rbDatosEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos configurados en el evento"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_16dp"
        />
    <TextView android:id="@+id/lblDatosEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="454545 km 45 min 78787.44 4545"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_16dp"
        android:gravity="center">
        <Button android:id="@+id/btnPublicar"
            android:theme="@style/ButtonAccent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Publicar"
          />
        <Button android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"

            android:layout_marginLeft="@dimen/margin_16dp"/>
    </LinearLayout>


</LinearLayout>