<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyResumen"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/background"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6dp"
            >
            <TextView android:id="@+id/lblTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PARQUE EMBALSE DEL NEUSA"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/text_size_16"
                android:paddingLeft="@dimen/margin_14dp"
                android:paddingRight="@dimen/margin_16dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_4dp"
                android:background="@color/blue60"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_6dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_chevron_right_24dp"
                android:id="@+id/imageView"
                />
        </FrameLayout>
         <!--<View-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="1dp"-->
             <!--android:background="@color/dividerColor"-->
             <!--android:layout_marginBottom="@dimen/margin_10dp"></View>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="horizontal">

                <TextView android:id="@+id/lblFecha"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="Fecha "
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/secondaryText"
                    android:layout_gravity="center_vertical|right"
                    />

            <TextView android:id="@+id/lblEstado"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="Estado "
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_vertical|right"
                />

            <TextView android:id="@+id/lblTotal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="Total "
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/primaryText"
                android:layout_gravity="center_vertical|right"
                />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
