<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyItemLogTrayecto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/background"
    >


    <LinearLayout android:id="@+id/lyTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                >


                <TextView android:id="@+id/lblTitulo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:text="Serial"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/primaryText"
                    android:layout_gravity="center_vertical|right"
                    />


                <TextView android:id="@+id/lblTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:text="30"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/secondaryText"
                        android:layout_gravity="center_vertical|right"
                        />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_blue_24dp"
                    android:layout_marginRight="@dimen/margin_6dp"/>

            </LinearLayout>


    </LinearLayout>


    <LinearLayout android:id="@+id/lyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bike_blue_36dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <TextView android:id="@+id/lblSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="Serial"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/primaryText"
                android:layout_gravity="center_vertical|right"

                />

                <TextView android:id="@+id/lblDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:text="15,2 km"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/primaryText"
                    android:layout_gravity="center_vertical|right"

                    />

                <TextView android:id="@+id/lblDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="00:00"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_vertical|right"
android:visibility="gone"
                />


            <TextView android:id="@+id/lblNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:text="Nombre"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_vertical|right"
                />



        </LinearLayout>

        <Button android:id="@+id/btnVerRuta"
            android:theme="@style/ButtonBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10"
            android:text="Ruta"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
